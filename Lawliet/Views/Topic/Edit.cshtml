@model TopicId;
@using Lawliet.Controllers;
@using Lawliet.Services;
@{
    var topicId = Model.Id;
    var cache = Context.RequestServices.GetService<CachingService>();
    LessonTopic topic = cache.GetObjectFromCache<LessonTopic>(topicId);
}
<center>
    <form action="" method="post">
        <div class="form-group" hidden="hidden">
            <label>Короткое название</label>
            <input type="text" class="form-control" name="Id" value="@topicId">
        </div>
        <div class="form-group">
            <label>Короткое название</label>
            <input type="text" class="form-control" name="ShortTitle" value="@topic.ShortTitle">
        </div>
        <div class="form-group">
            <label>Описание</label>
            <textarea class="form-control" rows="3" name="Description">@topic.Description</textarea>
        </div>
        <div class="form-group">
            <label>Url статьи в pdf формате</label>
            <input type="text" class="form-control" name="Url" value="@topic.Url">
        </div>
        <div class="form-group">
            <label>Url картинки</label>
            <input type="text" class="form-control" name="PictureUrl" value="@topic.PictureUrl">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Изменить</button>
        <br /><br />
        <a href="/Topic/Remove?id=@topicId"><button type="button" class="btn btn-danger">Удалить</button></a>
    </form>
</center>

<style>
    .form-group {
        width: 50%;
    }

    .btn {
        width: 50%;
    }

    .btn {
        margin-bottom: -15px;
    }
</style>