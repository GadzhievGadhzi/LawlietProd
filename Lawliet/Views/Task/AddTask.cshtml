<form action="" method="post">
    <center>
        <h4>Страница добавления заданий</h4>
    </center>
    <div class="form-group">
        <label>Название</label>
        <input type="text" class="form-control" name="Title">
    </div>
    <div class="form-group">
        <label>Описание</label>
        <textarea class="form-control" rows="5" name="Description"></textarea>
    </div>
    <br />
    <div class="form-group">
        <label>Время окончания задания</label>
        <input type="datetime-local" class="btn btn-outline-dark" name="EndDate" value="@DateTime.Now.ToString("s")" min="@DateTime.Now.ToString("s")">
    </div>
    <br />
    <div class="form-group">
        <label>Группа</label><br />
        @Html.DropDownList("Group", new SelectListItem[] {
            new SelectListItem { Text = "П20-53К", Value = "П20-53К" },
            new SelectListItem { Text = "П20-54К", Value = "П20-54К" },
            new SelectListItem { Text = "П20-55К", Value = "П20-55К" },
        })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Создать</button>
</form>

<style>
    .btn {
        width: 100%;
    }

    select {
        width: 100%;
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    option {
        font-weight: normal;
        display: block;
        white-space: nowrap;
        min-height: 1.2em;
        padding: 0px 2px 1px;
        background-color: #fff;
        color: black;
    }

    .container {
        width: 100%;
        max-width: 800px;
    }
</style>